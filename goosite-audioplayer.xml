<?xml version="1.0" encoding="UTF-8"?>
<Module>
<ModulePrefs title="Audio file title"
width="460"
height="75"
scrolling="false"
directory_title="Google Gadget til afspilning af lydfiler"
description="HTML 5 lydafspiller. Kan afspille filtyperne MP3 og OGG.">


</ModulePrefs>

<UserPref name="FILE" display_name="Lydfil" required="true" default_value="https://ia601903.us.archive.org/31/items/1360121/136012%20%281%29.mp3" />

<UserPref name="TYPE" display_name="Filtype" default_value="mp3" datatype="enum" >
<EnumValue value="mp3" />
<EnumValue value="ogg" />
</UserPref>

<UserPref name="START" display_name="Auto Start?" required="false" datatype="enum" >
<EnumValue value="Nej" />
<EnumValue value="Ja" />
</UserPref>

<UserPref name="LOOP" display_name="Afspil kontinuerligt?" required="false" datatype="enum" >
<EnumValue value="Nej" />
<EnumValue value="Ja" />
</UserPref>
    
<UserPref name="GDOWNLOAD" display_name="Vis link til filen INDE i afspilleren?" required="false" datatype="enum" >
<EnumValue value="Nej" />
<EnumValue value="Ja" />
</UserPref>

<UserPref name="DOWNLOAD" display_name="Vis link til filen UNDER afspilleren?" required="false" datatype="enum" >
<EnumValue value="Ja" />
<EnumValue value="Nej" />
</UserPref>

<UserPref name="CCOL" display_name="Baggrundsfarve (brug html farvekoder)" required="true" default_value="#ffffff" />

<Content type="html"><![CDATA[

<style type="text/css">
body
{
text-align: left;
font-family: Arial,sans-serif;
background-color: __UP_CCOL__;
margin: 15 0;
padding:0;
}

.download
{
font-size: 12px;
text-align: left;
font-family: Arial,sans-serif;
padding: 12px 0 0 4px;
font-style: italic;
}
  
</style>

<div id="player" style="position: absolute; bottom: 0px;"></div>
 
<script type="text/javascript">

// the parameters

var prefs = new gadgets.Prefs();

var s_fil = prefs.getString("FILE");

var s_dld = false;
var s_dld = prefs.getString("DOWNLOAD");
if (s_dld == "Yes")
{var s_downloadlink = "<br><div class='download'><a href='" + s_fil + "' target='_blank' download>download file</a></div>"; }
else
{var s_downloadlink = ""; }


var sta = false;
var s_sta = prefs.getString("START");
if (s_sta)
{
s_sta = s_sta.toUpperCase();
if (s_sta.substr(0,1) == 'N')
   {sta=false;}
else
   {sta=true;}
}

if (sta == true)
{var s_flv = "autoplay='autoplay'"; }
else
{var s_flv = ""; }

var loop = false;
var s_loop = prefs.getString("LOOP");
if (s_loop)
{
s_loop = s_loop.toUpperCase();
if (s_loop.substr(0,1) == 'N')
   {loop=false;}
else
   {loop=true;}
}

if (loop == true)
{var s_flvloop = "loop='autoplay'"; }
else
{var s_flvloop = ""; }

var gdown = false;
var s_gdown = prefs.getString("GDOWNLOAD");
if (s_gdown)
{
s_gdown = s_gdown.toUpperCase();
if (s_gdown.substr(0,1) == 'N')
   {gdown=false;}
else
   {gdown=true;}
}

if (gdown == false)
{var s_gdownload = "controlsList='nodownload'"; }
else
{var s_gdownload = ""; }

var s_typ = prefs.getString("TYPE");


var html="";


html = "<audio controls='controls' " + s_flv + s_flvloop + s_gdownload + ">"
       + "<source src='" + s_fil + "' type='audio/" + s_typ + "' />"
	+ "You cannot use audio tag with your browser" + "</audio>"
	+ s_downloadlink;


document.getElementById("player").innerHTML = html;


</script>
]]></Content>
</Module>
